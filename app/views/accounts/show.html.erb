Logged in as <%= current_user.login %>
<%= link_to "Logout",logout_path  %>
<h1>Account <%= @account.user.login %></h1>

<%= @account.balance %>
<hr />

<%= link_to "Een betaling uitvoeren",new_transaction_path %>

<hr />

<h2>Audit</h2>
<ol>
<% sum = 0 %>
  <li>Manually added credit</li>
<% @account.lines.all.manual.each do |l| %>
  <% sum += l.amount %>
  <li><%=  l.amount %></li>
<% end %>
  <li>Deposits and Withdrawals</li>
  <% @account.lines.transacted.each do |l| %>
  <% amount = (l.amount * -1) if l.transaction.sender_account == @account %>
  <% amount = l.amount if l.transaction.receiver_account == @account %>
  <li><%=  amount %></li>
  <% sum += amount %>
<% end %>
</ol>

TOTAL <%= sum %>
